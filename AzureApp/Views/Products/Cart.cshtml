@model List<AzureApp.Models.CartItem>

@{
    ViewData["Title"] = "Your Cart";
    decimal total = Model.Sum(i => i.ProductPrice * i.Quantity);
}

<h2 class="text-center mb-4">Your Cart</h2>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Image</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" width="80" alt="@item.ProductName" />
                        }
                        else
                        {
                            <span class="text-muted">No Image</span>
                        }
                    </td>
                    <td>R @item.ProductPrice.ToString("N2")</td>
                    <td>@item.Quantity</td>
                    <td>R @(item.ProductPrice* item.Quantity).ToString("N2")</td>
                    <td>
                        <form asp-action="RemoveFromCart" asp-controller="Products" method="post">
                            <input type="hidden" name="rowKey" value="@item.ProductID" />
                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h4 class="text-end">Total: <strong>R @total.ToString("N2")</strong></h4>

    <div class="text-end mt-3">
        <form asp-action="GenerateInvoice" asp-controller="Products" method="post" class="d-inline">
            <button type="submit" class="btn btn-primary">Generate Invoice</button>
        </form>
        <a class="btn btn-success ms-2" href="#">Checkout</a>
    </div>
}
